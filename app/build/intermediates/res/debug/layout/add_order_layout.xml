<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".Order_HomePage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33">

                    <TextView
                        android:id="@+id/txtordno"
                        android:layout_width="130dp"

                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Order No."
                        android:textColor="@color/material_grey_700"
                        android:textSize="14dp" />

                    <EditText

                        android:id="@+id/edtorderno"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtordno"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/buttonshapeempty"
                        android:editable="false"
                        android:padding="4dp"
                        android:text="1022"
                        android:textAlignment="center"
                        android:textColor="@color/material_grey_700"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33">

                    <TextView
                        android:id="@+id/txtOrderDate"
                        android:layout_width="130dp"

                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Order Date."
                        android:textAlignment="center"

                        android:textColor="@color/material_grey_700"
                        android:textSize="14dp" />

                    <TextView

                        android:id="@+id/edtorderdate"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtOrderDate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/buttonshapeempty"
                        android:gravity="center"
                        android:hint=""
                        android:padding="4dp"
                        android:text="date" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33">

                    <TextView
                        android:id="@+id/txtOrderdue"
                        android:layout_width="130dp"

                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Due Date"
                        android:textColor="@color/material_grey_700"
                        android:textSize="14dp" />

                    <TextView

                        android:id="@+id/edtOrderdue"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtOrderdue"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"

                        android:background="@drawable/buttonshapeempty"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="due date" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="5dp"
                android:background="#000000"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtclient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Client"
                    android:textColor="@color/material_grey_700"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">


                        <AutoCompleteTextView

                            android:id="@+id/edtclient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/buttonshapeempty"
                            android:paddingBottom="4dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/material_grey_700"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/imgBrowse"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/main_color_500"
                            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgClientAdd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cross" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/main_color_500">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@color/main_color_500"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Order Details"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_product"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:src="@drawable/cross_white" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/edtcode"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:text="Code"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/edtdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center|top|left"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/edtQty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center|top"
                    android:text="Qty."
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#000000" />


                <TextView
                    android:id="@+id/txtRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center|top"
                    android:text="Rate"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#000000" />


                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center|top"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lvorder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txtSubmit"
                    android:divider="@color/black"
                    android:dividerHeight="1px"></ListView>


                <TextView
                    android:id="@+id/txtSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/main_color_500"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/E:/Maulik%20Nano%20Projects/Latest%20GIT%20V4/LATEST/05-05-2016/final_v4acc_android/app/src/main/res/layout/add_order_layout.xml -->